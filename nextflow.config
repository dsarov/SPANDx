params {

    fastq               =   "*_{1,2}.fastq.gz"
	assemblies			=   false
	assembly_loc        =   "assemblies/*.fasta"
    ref                 =   "k96243.fasta"
    matrix              =   true
    annotation          =   false
	database			=   "Burkholderia_pseudomallei_k96243"
    mixtures            =   false
    phylogeny           =   true
    strain              =   "all"
    tech                =   "Illumina"
    pairing             =   "PE"
    window              =   1000
    indels              =   true
    tri_allelic         =   false
    size                =   0
    phred               =   "-phred33"
    org                 =   "haploid"
    executor            =   "local"
	structural          =   false
	notrim				=	false
}

includeConfig 'configs/gatk.config'

process {
    if(params.executor != "local") {
        conda = "$CONDA_PREFIX"
    }
    executor = params.executor


    errorStrategy = "retry"
	maxRetries = 4

    withLabel: card {
        cpus = 2
        memory = "4G"
        time = "2h"
    }

    withLabel: index {
        cpus = 2
        memory = "4G"
        time = "2h"
    }

    withLabel: spandx_default {
        cpus = 4
        memory = "16G"
        time = "24h"
    }

    withLabel: spandx_alignment {
        cpus = 2
        memory = "4G"
        time = "24h"
    }
    withLabel: spandx_gatk_haplo {
        cpus = 2
        memory = "8G"
        time = "24h"
    }
	withLabel: spandx_gatk {
        cpus = 2
        memory = "8G"
        time = "24h"
    }

    withLabel: spandx_snpeff {
        cpus = 2
        memory = "8G"
        time = "24h"
    }

    withLabel: spandx_pindel {
        cpus = 2
        memory = "8G"
        time = "96h"
    }

    withLabel: bedcov {
        cpus = 2
        memory = "1G"
        time = "1h"
    }

    withLabel: report {
        cpus = 2
        memory = "4G"
        time = "2h"
    }

	withLabel: master_vcf {
        cpus = 2
        memory = "4G"
        time = "24h"
    }
	withLabel: SNP_matrix {
        cpus = 2
        memory = "4G"
        time = "24h"
    }
}

manifest {
    homePage = 'http://github.com/dsarov/SPANDx'
    description = 'A comparative genomics pipeline'
    mainScript = 'main.nf'
    version = '4.0'
}
